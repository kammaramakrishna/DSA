148. Sort List

# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def sortList(self, head: Optional[ListNode]) -> Optional[ListNode]:
        def middle(head):
            slow, fast = head, head
            fast = fast.next
            while fast and fast.next:
                slow = slow.next
                fast = fast.next.next
            return slow
        
        def merge2lists(list1, list2):
            dummyNode = ListNode(-1)
            temp = dummyNode

            while list1 and list2:
                if list1.val < list2.val:
                    temp.next = list1
                    temp = list1
                    list1 = list1.next
                else:
                    temp.next = list2
                    temp = list2
                    list2 = list2.next
            if (list1):
                temp.next = list1
            else:
                temp.next = list2
            return dummyNode.next
        if head == None or head.next == None:
            return head
        
        middle = middle(head)
        right = middle.next
        middle.next = None
        left = head
        left = self.sortList(left)
        right = self.sortList(right)
        return merge2lists(left, right)
