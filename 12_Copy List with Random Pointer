138. Copy List with Random Pointer

"""
# Definition for a Node.
class Node:
    def __init__(self, x: int, next: 'Node' = None, random: 'Node' = None):
        self.val = int(x)
        self.next = next
        self.random = random
"""

class Solution:
    def insertBetween(self, head):
        temp = head
        while temp:
            copyNode = Node(temp.val)
            copyNode.next = temp.next
            temp.next = copyNode
            temp = temp.next.next
        
    def connectingRandom(self, head):
        temp = head
        while temp:
            copyNode = temp.next
            if temp.random:
                copyNode.random = temp.random.next
            else:
                copyNode.random = None
            temp = temp.next.next
        
    def connectNextPointer(self, head):
        temp = head
        dummyNode = Node(-1)
        res = dummyNode
        while temp:
            res.next = temp.next
            res = res.next
            
            temp.next = temp.next.next
            temp = temp.next
        return dummyNode.next

    def copyRandomList(self, head: 'Optional[Node]') -> 'Optional[Node]':
        self.insertBetween(head)
        self.connectingRandom(head)
        return self.connectNextPointer(head)
